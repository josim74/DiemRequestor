<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="0dp"
                android:layout_height="296dp"
                android:background="@color/cardview_light_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="14dp"
                    tools:layout_editor_absoluteX="16dp">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_circle_image_view"
                        android:layout_width="101dp"
                        android:layout_height="101dp"
                        android:layout_marginTop="44dp"
                        android:src="@drawable/profile_image"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/profile_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="21sp"
                        android:layout_marginTop="21dp"
                        android:text="Bruce Harrington"
                        android:textColor="#607D8A"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profile_circle_image_view" />

                    <TextView
                        android:id="@+id/member_since_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="5dp"
                        android:text="Member since October 2017"
                        android:textColor="#607D8A"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profile_name_tv" />

                    <TextView
                        android:id="@+id/review_offer_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:text="20 Reviews  "
                        android:textColor="#506876"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/star_imageView" />

                    <ImageView
                        android:id="@+id/star_two_iv"
                        android:layout_width="27dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/star_three_iv"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/star_one_iv"
                        app:layout_constraintTop_toBottomOf="@+id/member_since_tv"
                        app:srcCompat="@drawable/star_coloured" />

                    <ImageView
                        android:id="@+id/star_five_iv"

                        android:layout_width="27dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/star_four_iv"
                        app:layout_constraintTop_toBottomOf="@+id/member_since_tv"
                        app:srcCompat="@drawable/star_unselected" />

                    <ImageView
                        android:id="@+id/star_four_iv"
                        android:layout_width="27dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/star_five_iv"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/star_three_iv"
                        app:layout_constraintTop_toBottomOf="@+id/member_since_tv"
                        app:srcCompat="@drawable/star_coloured" />

                    <ImageView
                        android:id="@+id/star_one_iv"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/star_two_iv"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/member_since_tv"
                        app:srcCompat="@drawable/star_coloured" />

                    <ImageView
                        android:id="@+id/star_three_iv"
                        android:layout_width="27dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/star_four_iv"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/star_two_iv"
                        app:layout_constraintTop_toBottomOf="@+id/member_since_tv"
                        app:srcCompat="@drawable/star_coloured" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.Toolbar>

            <Button
                android:id="@+id/offer_btn"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/offers_selected"
                android:text="About  "
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="13dp"
                app:layout_constraintEnd_toStartOf="@+id/task_btn"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar" />

            <Button
                android:id="@+id/task_btn"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/task_unselected"
                android:text="Reviews  "
                android:textAllCaps="false"
                android:textColor="#F36133"
                android:textSize="13dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/offer_btn"
                app:layout_constraintTop_toBottomOf="@+id/toolbar" />

            <ScrollView
                android:id="@+id/scroll_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:fillViewport="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/task_btn">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:id="@+id/fragment_container"
                    />
            </ScrollView>


            

           <de.hdodenhof.circleimageview.CircleImageView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@drawable/attach_photo"
               app:layout_constraintTop_toBottomOf="@id/scroll_view"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginEnd="8dp"
               android:layout_marginTop="8dp"/>

        </android.support.constraint.ConstraintLayout>


</layout>