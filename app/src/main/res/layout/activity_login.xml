<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<android.support.constraint.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/login_image_view"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/login_vector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="@+id/login_image_view"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        tools:layout_editor_absoluteX="256dp"
        tools:layout_editor_absoluteY="148dp" />


    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="114dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="240dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="1dp"
                android:background="#707070"
                android:layout_marginStart="18dp"
                app:layout_constraintTop_toBottomOf="@+id/email_txt"/>

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/email_txt"
                android:layout_width="0dp"
                android:layout_height="59dp"
                android:hint="Email"
                android:layout_marginStart="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp"
                android:backgroundTint="@android:color/transparent"/>

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/pass_txt"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:hint="Password"
                android:layout_marginStart="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="66dp"
                android:backgroundTint="@android:color/transparent"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/email"
                app:layout_constraintEnd_toEndOf="@+id/email_txt"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:layout_width="39dp"
                android:layout_height="26dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="12dp"
                android:src="@drawable/pass_icon"
                tools:layout_editor_absoluteX="280dp"
                tools:layout_editor_absoluteY="72dp" />



        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/login_btn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/btn_background"
        android:text="LOG IN"
        android:textColor="#ffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="394dp" />


    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="114dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="450dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="1dp"
                android:background="#707070"
                android:layout_marginStart="18dp"
                app:layout_constraintTop_toBottomOf="@+id/email_txt_1"/>

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/email_txt_1"
                android:layout_width="0dp"
                android:layout_height="59dp"
                android:hint="Email"
                android:layout_marginStart="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp"
                android:backgroundTint="@android:color/transparent"/>

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/pass_txt_1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:hint="Password"
                android:layout_marginStart="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="66dp"
                android:backgroundTint="@android:color/transparent"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/backwhite"
                app:layout_constraintEnd_toEndOf="@+id/email_txt"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:layout_width="35dp"
                android:layout_height="24dp"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/backwhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />



        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>

</layout>