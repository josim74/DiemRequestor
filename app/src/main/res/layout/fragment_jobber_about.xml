<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.biswajitbanik.Diem.JobberAboutFragment">

        <View

            android:id="@+id/view4"
            android:layout_width="0dp"
            android:layout_height="260dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="22dp"
            android:text="Why I am right for your Job"
            android:textColor="#F36133"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@id/view4"
            app:layout_constraintTop_toTopOf="@+id/view4"


            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="376dp" />

        <TextView
            android:id="@+id/right_for_job_tv"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13dp"
            android:text="Hi, I love gardening and I love nature. I have knowledge of many varieties of ferns, flowers and houseplants. I love landscaping and can do theregular lawn related chores."
            app:layout_constraintEnd_toEndOf="@id/view4"
            app:layout_constraintStart_toStartOf="@id/view4"
            app:layout_constraintTop_toBottomOf="@id/textview"

            tools:layout_editor_absoluteY="419dp" />

        <View
            android:id="@+id/line1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:background="#31000000"

            android:layout_marginTop="8dp"

            app:layout_constraintEnd_toEndOf="@id/view4"
            app:layout_constraintStart_toStartOf="@id/view4"
            app:layout_constraintTop_toBottomOf="@id/right_for_job_tv" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:text="Clients rated Bruce very highly"
            android:textColor="#F36133"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@id/view4"
            app:layout_constraintTop_toBottomOf="@id/line1"
            tools:layout_editor_absoluteX="16dp"
